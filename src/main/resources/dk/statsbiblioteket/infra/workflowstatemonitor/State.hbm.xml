<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="dk.statsbiblioteket.infra.workflowstatemonitor">
    <class name="State" table="STATE">
        <id name="id" column="STATE_ID">
            <generator class="native"/>
        </id>
        <property name="component"/>
        <property name="state"/>
        <property name="date" type="timestamp"/>
        <set name="entities" table="ENTITY_STATE" inverse="true" lazy="false">
            <key column="STATE_ID"/>
            <many-to-many column="ENTITY_ID" class="Entity"/>
        </set>
    </class>
</hibernate-mapping>